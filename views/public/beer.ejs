
<h2 class="text-center">Biere {{ beer }}</h2>
<br>
<div id="addComment" class="text-center">
    <a  class="btn btn-lg " href="/#/beer/add/comment/"><span class="glyphicon glyphicon-plus"></span>Ajouter votre appréciation</a>
</div>
<h3 class="text-center"> Note globale: </h3>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"><span class="sr-only">60% Complete</span></div>
</div>
<br>

<h3  class="text-center">Appréciations:</h3>
<div id='refAppreciation'>
    <div class="col-xs-offset-1 col-xs-10" ng-repeat="comment in comments">
        <p class="hidden">{{ comment.mark * 10 }}</p>
        <p>{{ comment.mark }}/10 Par {{ comment.clientId }} le {{ comment.date }} :</p>
        <p>{{ comment.comment }}</p>
        <div class="progress">
            <div class="progress-bar" value="{{ comment.mark }}" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"><span class="sr-only">60% Complete</span></div>
        </div>
        <script>
//            var ref =  $('.progress-bar');
            for(i=0; i<$('.progress-bar').length;i++) {
                var element = $('.progress-bar')[i];
                console.log(element);
                element.style.width = element.value;

            }
        </script>
    </div>
</div>


